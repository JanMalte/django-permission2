{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "separateMultipleMajor": true,
  "major": {
    "dependencyDashboardApproval": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "platformAutomerge": true,
  "rebaseWhen": "behind-base-branch",
  "pre-commit": {
    "enabled": true
  }
}
